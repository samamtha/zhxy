        <image wx:for-items="{{piclist}}" bind:tap="picTap" class="page-body-spacing-pic" src="{{picURLCommon + 'pic_' + item.id + picSuffix}}" id="{{item.id}}" wx:key></image>
      </view>
      <view class="page-body-text">{{ body.appendInfo }}</view>
    </view>-->
