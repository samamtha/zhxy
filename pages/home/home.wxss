text {
  font-family:"微软雅黑",arial;
  font-size: 32rpx;
}

.main-container {
  height:100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  transition: all;
}
.page-head{
  width: 100%;
  height:398rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  /* box-sizing: border-box; */
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 100rpx 0 20rpx;
  border-radius: 50%;
  border: solid 4rpx #EAEAEA
}
.userinfo-nickname {
  color: #f1f2f3;
}

/* fade */
.container-fade{
  opacity: 0.5;
}

.page-middle{
  position: relative;
  width: 690rpx;
  padding: 41rpx 30rpx 15rpx 30rpx;
}
.page-middle .m-box {
  padding-bottom: 10rpx
}
.page-middle .title {
  display: inline-block;
  width: 128rpx;
  color: #06f;
  vertical-align: middle;
  padding: 0 6rpx;
  border-right: 2rpx solid #06f;
}
.page-middle .detail  {
  display: inline-block;
  width: 520rpx;
  padding: 6rpx 10rpx;
  vertical-align: middle;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.page-bar{
  position: relative;
  padding: 0 1.9% 40rpx;
  width: 96.2%;
  background-color: #ffffff;
  align-items: center;
}
.page-bar-item{
  display: inline-block;
  margin-top: 60rpx;
  background-color: #ffffff;
  height: 100%;
  text-align:center;
}
.page-bar:after , .page-middle:after{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  border:8rpx solid #EAEAEA;
  font-size: 0;
  content: "";
}
.page-bar-item image{
  height: 171.6rpx;
  width: 171.6rpx;
}
.page-bar-item view{
  font-size:32rpx;
  color:black;
  padding: 1.4% auto 0;
  text-align:center;
}


